#!/bin/sh
# postinst script 
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#

case "$1" in
    configure)
	gconftool-2 --direct --config-source xml:readwrite:/etc/gconf/gconf.xml.defaults --type string --set /apps/notification-daemon/theme standard
	gconftool-2 --direct --config-source xml:readwrite:/etc/gconf/gconf.xml.defaults --type string --set /desktop/gnome/url-handlers/mailto/command "kmail %s"
	gconftool-2 --direct --config-source xml:readwrite:/etc/gconf/gconf.xml.defaults --type string --set /desktop/gnome/url-handlers/file/command "dolphin %s"
	gconftool-2 --direct --config-source xml:readwrite:/etc/gconf/gconf.xml.defaults --type bool --set /desktop/gnome/url-handlers/file/enabled true
	gconftool-2 --direct --config-source xml:readwrite:/etc/gconf/gconf.xml.defaults --type bool --set /desktop/gnome/url-handlers/file/needs_terminal false
	if [ -e /usr/share/icons/Mint-KDE ]
	then
		cp -f /usr/share/icons/Mint-KDE/16x16/apps/ubiquity.png /usr/share/icons/hicolor/16x16/apps/
		cp -f /usr/share/icons/Mint-KDE/22x22/apps/ubiquity.png /usr/share/icons/hicolor/22x22/apps/
		cp -f /usr/share/icons/Mint-KDE/32x32/apps/ubiquity.png /usr/share/icons/hicolor/32x32/apps/
		cp -f /usr/share/icons/Mint-KDE/48x48/apps/ubiquity.png /usr/share/icons/hicolor/48x48/apps/
		cp -f /usr/share/icons/Mint-KDE/64x64/apps/ubiquity.png /usr/share/icons/hicolor/64x64/apps/
		cp -f /usr/share/icons/Mint-KDE/128x128/apps/ubiquity.png /usr/share/icons/hicolor/128x128/apps/
		cp -f /usr/share/icons/Mint-KDE/16x16/apps/software-properties-mint.png /usr/share/icons/hicolor/16x16/apps/
		cp -f /usr/share/icons/Mint-KDE/22x22/apps/software-properties-mint.png /usr/share/icons/hicolor/22x22/apps/
		cp -f /usr/share/icons/Mint-KDE/32x32/apps/software-properties-mint.png /usr/share/icons/hicolor/32x32/apps/
		cp -f /usr/share/icons/Mint-KDE/48x48/apps/software-properties-mint.png /usr/share/icons/hicolor/48x48/apps/
		cp -f /usr/share/icons/Mint-KDE/64x64/apps/software-properties-mint.png /usr/share/icons/hicolor/64x64/apps/
		cp -f /usr/share/icons/Mint-KDE/128x128/apps/software-properties-mint.png /usr/share/icons/hicolor/128x128/apps/
	fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


